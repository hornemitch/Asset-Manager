.template-body.pc
   .row
      h1.pageHeadings Computer Details
   .row
      .detail-div
         table.table-bordered
            tbody
               tr
                  th.col-md-12.centered Main Information
         table.table-bordered
            tbody
               tr
                  th Asset Number
                  th Serial Number
                  th User
                  th Status
                  th Location
               tr
                  td.td-words #{assetNumber}
                  td.td-words #{serialNumber}
                  td.td-words #{user}
                  td.td-words #{status}
                  td.td-words #{locate}
         table.table-bordered
            tbody
               tr
                  th.col-md-12.centered Financial Information
         table.table-bordered
            tbody
               tr
                  th.col-md-2 Invoice Number
                  th.col-md-2 Purchase Order
                  th.col-md-2 Purchase Date
                  th.col-md-2 Purchase Price
                  th.col-md-2 Depreciation Rate
                  th.col-md-2 Book Value
               tr
                  td.col-md-2.td-words #{invoiceNumber}
                  td.col-md-2.td-words #{purchaseOrderNumber}
                  td.col-md-2.td-words #{purchaseDate}
                  td.col-md-2 R #{showValue costPrice}
                  td.col-md-2.td-words #{decDep}% p/a
                  td.col-md-2 R #{showValue bookValue}
         table.table-bordered
            tbody
               tr
                  th.col-md-12.centered Computer Information
         table.table-bordered
            tbody
               tr
                  th.col-md-3 Supplier
                  th.col-md-3 Manufacturer
                  th.col-md-3 Model
                  th.col-md-3 Warranty Expiration Date
               tr
                  td.col-md-3.td-words #{supplier}
                  td.col-md-3.td-words #{manufacturer}
                  td.col-md-3.td-words #{model}
                  td.col-md-3.td-words #{warrantyExpiration}
         table.table-bordered
            tbody
               tr
                  th.col-md-4 Description
                  td.col-md-8.td-words #{description}

   .row
      a.detailIcons.backButton(href='{{pathFor "computers"}}' data-toggle="tooltip" title="Back to Computers")
         i.fa.fa-arrow-left
      a.detailIcons.editIcon(href='{{pathFor "computer.edit"}}' data-toggle="tooltip" title="Update")
         i.fa.fa-pencil
      a.detailIcons.positiveIcon(href='{{pathFor "computer.software"}}' data-toggle="tooltip" title="Software")
         i.fa.fa-code-fork

script.
   $(document).ready(function () {
      $('[data-toggle="tooltip"]').tooltip();
   });