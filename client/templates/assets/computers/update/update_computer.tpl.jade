.template-body
    .row
        h1.pageHeadings Update Computer
    form.computer-edit-form.input-form
        .row
            .col-md-3
                h2.inputHeadings Invoice Number
            .col-md-3
                h2.inputHeadings Purchase Order Number
            .col-md-3
                h2.inputHeadings Status
            .col-md-3
                h2.inputHeadings Purchase Cost
        .row
            .col-md-3
                input.inputFields(type='text' autocomplete='off' onclick='this.select()' name='invoiceNumber' value='#{invoiceNumber}')
            .col-md-3
                input.inputFields(type='text' autocomplete='off' onclick='this.select()' name='purchaseOrderNumber' value='#{purchaseOrderNumber}')
            .col-md-3
                select.inputFields.point(name='compStatus')
                    option(value='Newly Acquired' selected='{{isCurrentState "Newly Acquired"}}') Newly Acquired
                    option(value='Currently In Use' selected='{{isCurrentState "Currently In Use"}}') Currently In Use
                    option(value='In For Repairs' selected='{{isCurrentState "Currently In Use"}}') In For Repairs
                    option(value='Not In Use' selected='{{isCurrentState "Not In Use"}}') Not In Use
            .col-md-3
                input.inputFields(type='number' autocomplete='off' onclick='this.select()' name='costPrice' step='0.01' value='#{costPrice}')
        .row
            .col-md-3
                h2.inputHeadings Supplier
            .col-md-3
                h2.inputHeadings Manufacturer
            .col-md-3
                h2.inputHeadings Model
            .col-md-3
                h2.inputHeadings Location
        .row
            .col-md-3
                input.inputFields(type='text' autocomplete='off' name='supplier' onclick='this.select()' value='#{supplier}')
            .col-md-3
                input.inputFields(type='text' autocomplete='off' name='manufacturer' onclick='this.select()' value='#{manufacturer}')
            .col-md-3
                input.inputFields(type='text' autocomplete='off' name='model' onclick='this.select()' value='#{model}')
            .col-md-3
                select.inputFields.point(name='locationSelect')
                    each locations.places
                        +location_computer_option
        .row
            .col-md-3
                h2.inputHeadings Serial Number
            .col-md-3
                h2.inputHeadings User
            .col-md-3
                h2.inputHeadings Purchase Date
            .col-md-3
                h2.inputHeadings Warranty Expiration
        .row
            .col-md-3
                input.inputFields(type='text' autocomplete='off' name='serialNumber' onclick='this.select()' value='#{serialNumber}')
            .col-md-3
                input.inputFields(type='text' autocomplete='off' name='compUser' onclick='this.select()' value='#{user}')
            .col-md-3
                input.inputFields.point#datepicker1(type='text' name='purchaseDate' onclick='this.select()' value='#{purchaseDate}')
            .col-md-3
                input.inputFields.point#datepicker2(type='text' name='warrantyExpiration' onclick='this.select()' value='#{warrantyExpiration}')
        .row
            .col-md-3
                h2.inputHeadings Description
        .row
            .col-md-3
                textarea.inputFields(name='desc' onclick='this.select()') #{description}

        .row.button-row
            hr
            a.backButton(href='{{pathFor "computers"}}' data-toggle="tooltip" title="Back to Computers")
                i.fa.fa-arrow-left
            button.saveButton(type='input' data-toggle="tooltip" title="Update Computer")
                i.fa.fa-floppy-o

script.
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });