.template-body
    .row
        h1.pageHeadings Update Furniture
    form.furniture-edit-form.input-form
        .row
            .col-md-3
                h2.inputHeadings Invoice Number
            .col-md-3
                h2.inputHeadings Purchase Order Number
            .col-md-3
                h2.inputHeadings Status
            .col-md-3
                h2.inputHeadings Purchase Cost
        .row
            .col-md-3
                input.inputFields(type='text' autocomplete='off' name='invoiceNumber' value='#{invoiceNumber}' onclick='this.select()'  required)
            .col-md-3
                input.inputFields(type='text' autocomplete='off' name='purchaseOrderNumber' value='#{purchaseOrderNumber}' onclick='this.select()' required)
            .col-md-3
                select.inputFields.point(name='compStatus')
                    option(value='Newly Acquired' selected='{{isCurrentState "Newly Acquired"}}') Newly Acquired
                    option(value='Currently In Use' selected='{{isCurrentState "Currently In Use"}}') Currently In Use
                    option(value='In For Repairs' selected='{{isCurrentState "In For Repairs"}}') In For Repairs
                    option(value='Not In Use' selected='{{isCurrentState "Not In Use"}}') Not In Use
            .col-md-3
                input.inputFields(type='number' autocomplete='off' name='costPrice' step='0.01' value='#{costPrice}' onclick='this.select()' required)
        .row
            .col-md-3
                h2.inputHeadings Supplier
            .col-md-3
                h2.inputHeadings Manufacturer
            .col-md-3
                h2.inputHeadings Model
            .col-md-3
                h2.inputHeadings Location
        .row
            .col-md-3
                input.inputFields(type='text' autocomplete='off' name='supplier' value='#{supplier}' onclick='this.select()' required)
            .col-md-3
                input.inputFields(type='text' autocomplete='off' name='manufacturer' value='#{manufacturer}' onclick='this.select()' required)
            .col-md-3
                input.inputFields(type='text' autocomplete='off' name='model' value='#{model}' onclick='this.select()' required)
            .col-md-3
                select.inputFields.point(name='locationSelect')
                    each locations.places
                        +location_furniture_option
        .row
            .col-md-3
                h2.inputHeadings Purchase Date
            .col-md-3
                h2.inputHeadings Warranty Expiration
            .col-md-3
                h2.inputHeadings User
            .col-md-3
                h2.inputHeadings Office
        .row
            .col-md-3
                input.inputFields.point#datepicker1(type='text' name='purchaseDate' value='#{purchaseDate}' required)
            .col-md-3
                input.inputFields.point#datepicker2(type='text' name='warrantyExpiration' value='#{warrantyExpiration}' required)
            .col-md-3
                input.inputFields(type='text' autocomplete='off' name='furnUser' value='#{user}' onclick='this.select()' required)
            .col-md-3
                input.inputFields(type='text' autocomplete='off' name='office' value='#{office}' onclick='this.select()' required)
        .row
            .col-md-3
                h2.inputHeadings Description
        .row
            .col-md-3
                textarea.inputFields(name='description' value='#{description}' onclick='this.select()') #{description}

        .row.button-row
            hr
            a.backButton(href='{{pathFor "furniture"}}' data-toggle="tooltip" title="Back to Furniture")
                i.fa.fa-arrow-left
            button.saveButton(type='input' data-toggle="tooltip" title="Update Furniture")
                i.fa.fa-floppy-o

script.
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });