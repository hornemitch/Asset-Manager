.template-body
   .row
      h1.pageHeadings Add Tool
   form.addTool.input-form
      .row
         .col-md-3
            h2.inputHeadings Invoice Number
         .col-md-3
            h2.inputHeadings Purchase Order Number
         .col-md-3
            h2.inputHeadings Purchase Cost
         .col-md-3
            h2.inputHeadings Supplier
      .row
         .col-md-3
            input.inputFields(type='text' autocomplete='off' name='invoiceNumber' placeholder='Enter Invoice Number')
         .col-md-3
            input.inputFields(type='text' autocomplete='off' name='purchaseOrderNumber' placeholder='Enter Purchase Order Number')
         .col-md-3
            input.inputFields(type='number' autocomplete='off' name='costPrice' step='0.01' placeholder='Enter Purchase Cost')
         .col-md-3
            input.inputFields(type='text' autocomplete='off' name='supplier' placeholder='Enter Supplier Name')
      .row
         .col-md-3
            h2.inputHeadings Manufacturer
         .col-md-3
            h2.inputHeadings Model
         .col-md-3
            h2.inputHeadings Serial Number
         .col-md-3
            h2.inputHeadings Purchase Date
      .row
         .col-md-3
            input.inputFields(type='text' autocomplete='off' name='manufacturer' placeholder='Enter Manufacturer Name')
         .col-md-3
            input.inputFields(type='text' autocomplete='off' name='model' placeholder='Enter Tool Model')
         .col-md-3
            input.inputFields(type='text' autocomplete='off' name='serial' placeholder='Enter Serial Number')
         .col-md-3
            input.inputFields.point#datepicker1(type='text' name='purchaseDate')
      .row
         .col-md-3
            h2.inputHeadings Warranty Expiration
         .col-md-3
            h2.inputHeadings Location
         .col-md-3
            h2.inputHeadings Category
         .col-md-3
            h2.inputHeadings Description
      .row
         .col-md-3
            input.inputFields.point#datepicker2(type='text' name='warrantyExpiration')
         .col-md-3
            select.inputFields.point(name='location')
               each locations
                  +location_options
         .col-md-3
            select.inputFields.point(name='category')
               each categories
                  option(value='#{_id}') #{name}
         .col-md-3
            textarea.inputFields(autocomplete='off' name='description' placeholder='Describe the Tool')

      .row
         hr
         .col-md-12
            if calibrationNeeded
               .row
                  a.noCalibButton(href='#' data-toggle='tooltip' title='Tool was Calibrated')
                     i.fa.fa-cog.fa-spin
               script.
                  $(document).ready(function () {
                     $('[data-toggle="tooltip"]').tooltip();
                  });
            else
               .row
                  a.CalibButton(href='#' data-toggle='tooltip' title='Tool is not Calibrated')
                     i.fa.fa-cog
               script.
                  $(document).ready(function () {
                     $('[data-toggle="tooltip"]').tooltip();
                  });

      .row
         .col-md-4
            h2.inputHeadings Certification Number
         .col-md-4
            h2.inputHeadings Calibration Date
         .col-md-4
            h2.inputHeadings Recalibration Date
      .row
         .col-md-4
            input.inputFields#calibInputs1(type='text' autocomplete='off' name='certNumber' placeholder='Enter Certification Number')
         .col-md-4
            input.inputFields.point#datepicker3(type='text' name='calibrationDate')
         .col-md-4
            input.inputFields.point#datepicker4(type='text' name='renewalDate')

      .row
         hr
         a.backButton(href='{{pathFor "tools"}}' data-toggle="tooltip" title="Back to Tools")
            i.fa.fa-arrow-left
         button.saveButton(type='input' data-toggle="tooltip" title="Save Tool")
            i.fa.fa-floppy-o

script.
   $(document).ready(function () {
      $('[data-toggle="tooltip"]').tooltip();
   });