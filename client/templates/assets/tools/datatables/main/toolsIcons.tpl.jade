.icon-template
    a.goodIcon(href='{{pathFor "tool.detail"}}' data-toggle="tooltip" title="View Details")
        i.fa.fa-eye
    a.editIcon(href='{{pathFor "tool.edit"}}' data-toggle="tooltip" title="Update")
        i.fa.fa-pencil
    a.removeButton.trashIcon(href='#' data-toggle="tooltip" title="Delete")
        i.fa.fa-trash

script.
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });