.template-body
    .row
        h1.pageHeadings Building Overview Report
    .row
        table.table-bordered.report-table.col-md-10.col-md-offset-1
            tr
                th.report-center Asset Number
                th.report-center Building Name
                th.report-center Status
                th.report-center Purchase Date
                th.report-center Purchase Cost
                th.report-center Current Value
            each buildings
                tr
                    td
                        p.tableTitles #{assetNumber}
                    td
                        p.tableTitles #{buildingName}
                    td
                        p.tableTitles #{status}
                    td
                        p.report-center #{purchaseDate}
                    td
                        p.currency R
                        p.amount #{showValue purchaseCost}
                    td
                        p.currency R
                        p.amount #{showValue currentValue}
            tr
                td
                    b
                        p.tableTitles Totals
                td
                    b
                        p.tableTitles #{buildingCount} Buildings
                td
                    p.report-center -
                td
                    p.report-center -
                td
                    b
                        p.currency R
                    b
                        p.amount #{showValue buildingCost}
                td
                    b
                        p.currency R
                    b
                        p.amount #{showValue buildingValue}

script.
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });