            th.report-center Asset Number
            th.report-center Number
            th.report-center User
            th.report-center Status
            th.report-center Manufacturer
            th.report-center Model
            th.report-center PurchaseDate
            th.report-center Purchase Price
        each cellphones
            tr
                td
                    p.tableTitles #{assetNumber}
                td
                    p.tableTitles #{cellNumber number}
